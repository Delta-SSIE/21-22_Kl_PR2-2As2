<Window x:Class="_03_WPF_01_Hello_world.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_WPF_01_Hello_world"
        mc:Ignorable="d"
        Title="Hello World App" Height="450" Width="800">
    <Grid>
        <Label x:Name="HelloLbl"
               Content="Hello World!" 
               HorizontalAlignment="Left" 
               Margin="77,60,0,0" 
               VerticalAlignment="Top" 
               FontSize="24" 
               FontWeight="Bold" 
               Visibility="Visible" 
               FontStyle="Italic" 
               MouseDoubleClick="HelloLbl_MouseDoubleClick" 
               MouseRightButtonUp="HelloLbl_MouseRightButtonUp"
               />
        <Button Content="Click me!" FontSize="20" Margin="285,60,315,324" Click="Button_Click" />

    </Grid>
</Window>
