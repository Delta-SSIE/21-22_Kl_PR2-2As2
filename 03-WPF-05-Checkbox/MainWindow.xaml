<Window x:Class="_03_WPF_05_Checkbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_WPF_05_Checkbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="203" Width="329">
    <Grid>
        <CheckBox x:Name="IsVeganCB" Content="Chci vegetariánské" HorizontalAlignment="Left" Margin="82,60,0,0" VerticalAlignment="Top" Checked="IsVeganCB_Checked" Unchecked="IsVeganCB_Checked"/>
        <Button x:Name="CheckBtn" Content="Zaškrtni" HorizontalAlignment="Left" Margin="82,94,0,0" VerticalAlignment="Top" Click="CheckBtn_Click"/>
        <Button x:Name="UncheckBtn" Content="Odškrtni" HorizontalAlignment="Left" Margin="161,94,0,0" VerticalAlignment="Top" Click="UncheckBtn_Click"/>
        <Rectangle x:Name="DisplayRect" HorizontalAlignment="Left" Height="54" Margin="241,60,0,0" Stroke="Black" VerticalAlignment="Top" Width="54"/>

    </Grid>
</Window>
